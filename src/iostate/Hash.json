// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward

net.nosegrind.IOState
*/

	
{
    "NAME":"hash",
    "VALUES": {
	"hash_file":{
            "type": "String",
            "description":"File of hashes to be cracked",
	    "mockData":""
	}
    },
	"CURRENTSTABLE": "1",
	"VERSION": {
		"1": {
			"DEFAULTACTION":"crackHash",
			"URI": {
			    "crackHash": {
			     	"METHOD":"POST",
			    	"DESCRIPTION":"Given a list of hashes, sends back  Map of crack result and hash",
			    	"ROLES":{
				    "DEFAULT":["ROLE_ADMIN","ROLE_USER"],
				    "BATCH":["ROLE_ADMIN"],
				    "HOOK":["ROLE_ADMIN"]
				},
			        "REQUEST": {
			            "permitAll":["hash_file"]
			        },
			        "RESPONSE": {
			        	"permitAll":["hash_file"]
			        }
			    }
			}
		}
	}
}
