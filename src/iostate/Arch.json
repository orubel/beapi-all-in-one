// NOTES

/* 'permitAll' needs to always come first so other roles can make use of it
* as they come afterward

net.nosegrind.IOState
*/

	
{
    "NAME":"arch",
    "NETWORKGRP": "private",
    "VALUES": {
        "url":{
            "type": "String",
            "description":"URL of server (with port)",
	    "mockData":"http://localhost:8080"
        },
        "master":{
            "type": "Boolean",
            "description":"Boolean determining if master server or not",
	    "mockData":"true"
        },
        "hasCert":{
            "type": "Boolean",
            "description":"true : False",
	    "mockData":"false"
        },
        "certExpiration":{
            "type": "String",
            "description":"Date of Cert Expiration",
	    "mockData":"11-11-2030-11:11:11"
        },
	"servers":{
            "type": "Map",
            "description":"List of Servers",
	    "mockData":"[:]"
	}
    },
	"CURRENTSTABLE": "1",
	"VERSION": {
		"1": {
			"DEFAULTACTION":"pingServers",
			"URI": {
			    "getMaster": {
			     	"METHOD":"GET",
			    	"DESCRIPTION":"Retrieve URL of MASTER instance",
			    	"ROLES":{
				    "BATCH":["ROLE_ADMIN"]
				},
			        "REQUEST": {
			            "permitAll":[]
			        },
			        "RESPONSE": {
			        	"permitAll":["url","master"]
			        }
			    },
			    "getServers": {
			     	"METHOD":"GET",
			    	"DESCRIPTION":"Retrieve URL of all available instances",
			    	"ROLES":{
				    "BATCH":["ROLE_ADMIN"],
				    "HOOK":["ROLE_ADMIN"]
				},
			        "REQUEST": {
			            "permitAll":[]
			        },
			        "RESPONSE": {
			        	"permitAll":["servers"]
			        }
			    },
			    "pingServers": {
			     	"METHOD":"GET",
			    	"DESCRIPTION":"Ping all available instances",
			    	"ROLES":{
				    "BATCH":["ROLE_ADMIN"],
				    "HOOK":["ROLE_ADMIN"]
				},
			        "REQUEST": {
			            "permitAll":[]
			        },
			        "RESPONSE": {
			        	"permitAll":["servers"]
			        }
			    },
			    "ping": {
			     	"METHOD":"GET",
			    	"DESCRIPTION":"Ping",
			    	"ROLES":{
				    "BATCH":["ROLE_ADMIN"],
				    "HOOK":["ROLE_ADMIN"]
				},
			        "REQUEST": {
			            "permitAll":[]
			        },
			        "RESPONSE": {
			        	"permitAll":["servers"]
			        }
			    }
			}
		}
	}
}
